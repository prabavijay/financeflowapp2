# Finance Flow Backend Environment Configuration
# Copy this file to .env and update with your actual values
# Reference: ../ENVIRONMENT_NOTES.md

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration (from ENVIRONMENT_NOTES.md)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance
DB_USER=luxmiuser
DB_PASSWORD=luxmi

# PostgreSQL Path
POSTGRES_PATH=/Library/Postgresql/17/bin/postgres

# Security Keys (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data_32_chars_min

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=logs/finance-flow.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Options
DEBUG_SQL=false
ENABLE_REQUEST_LOGGING=true