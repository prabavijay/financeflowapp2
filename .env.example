# OAuth2 Configuration
# Copy this file to .env.local and fill in your OAuth2 credentials
# Note: Vite uses VITE_ prefix instead of REACT_APP_

# Google OAuth2 (for Gmail integration)
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth2 (for Outlook integration)
VITE_MICROSOFT_CLIENT_ID=your-microsoft-client-id

# Yahoo OAuth2 (for Yahoo Mail integration - future)
VITE_YAHOO_CLIENT_ID=your-yahoo-client-id

# Development Settings
VITE_MOCK_OAUTH=false
VITE_SKIP_TOKEN_VALIDATION=false
VITE_TEST_USER_EMAIL=test@example.com

# API Configuration
VITE_API_BASE_URL=http://localhost:3001

# Security Settings
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000