}

/* Table Styling - no shadows or borders */
table,
thead,
tbody,
tr,
th,
td,
.table,
[role="table"],
[role="row"],
[role="columnheader"],
[role="cell"] {
  background: transparent !important;
  border: none !important;
  color: var(--text-secondary) !important;
  box-shadow: none !important;
}

/* Subtle hairline borders for all tables */
table, th, td {
  border: 0.5px solid rgba(148, 163, 184, 0.13) !important;
  border-collapse: collapse !important;
}

th, td {
  border-right: 0.5px solid rgba(148, 163, 184, 0.10) !important;
  border-bottom: 0.5px solid rgba(148, 163, 184, 0.10) !important;
}

thead th {
  border-bottom: 1px solid rgba(148, 163, 184, 0.18) !important;
}

tbody tr:last-child td {
  border-bottom: none !important;
}

th,
[role="columnheader"] {
  background: rgba(30, 41, 59, 0.2) !important;
  color: var(--text-primary) !important;
  font-weight: 600 !important;
  border: none !important;
  box-shadow: none !important;
}

tr:hover,
[role="row"]:hover {
  background: rgba(30, 41, 59, 0.1) !important;
  border: none !important;
  box-shadow: none !important;
}

/* Form Labels */
label,
.label,
[class*="label"] {
  color: var(--text-primary) !important;
  font-weight: 500 !important;
}

/* Code and Pre blocks */
code,
pre,
.code {
  background: rgba(15, 23, 42, 0.8) !important;
  color: var(--accent-emerald) !important;
  border: 1px solid var(--border-primary) !important;
}

/* Badge/Chip Components */
.badge,
.chip,
span[class*="badge"],
div[class*="badge"] {
  background: linear-gradient(135deg, 
    rgba(16, 185, 129, 0.2) 0%, 
    rgba(5, 150, 105, 0.2) 100%) !important;
  color: var(--accent-emerald) !important;
  border: 1px solid rgba(16, 185, 129, 0.3) !important;
}

/* Skeleton Loading */
.skeleton,
div[class*="skeleton"],
[class*="animate-pulse"] {
  background: linear-gradient(135deg, 
    rgba(30, 41, 59, 0.6) 0%, 
    rgba(51, 65, 85, 0.4) 50%, 
    rgba(30, 41, 59, 0.6) 100%) !important;
}

/* Link Styling */
a,
.link,
[role="link"] {
  color: var(--accent-emerald) !important;
  text-decoration: none !important;
}

a:hover,
.link:hover,
[role="link"]:hover {
  color: var(--accent-emerald-dark) !important;
  text-decoration: underline !important;
}

/* Selection Styling */
::selection {
  background: rgba(16, 185, 129, 0.3) !important;
  color: var(--text-primary) !important;
}

/* Focus Styling */
*:focus,
*:focus-visible {
  outline: 2px solid var(--accent-emerald) !important;
  outline-offset: 2px !important;
  box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1) !important;
}

/* Slider Components */
input[type="range"],
.slider,
[role="slider"] {
  background: var(--bg-secondary) !important;
}

input[type="range"]::-webkit-slider-thumb,
.slider-thumb {
  background: var(--accent-emerald) !important;
  border: 2px solid var(--accent-emerald-dark) !important;
}

/* Toggle/Switch Components */
.toggle,
.switch,
[role="switch"] {
  background: var(--bg-secondary) !important;
  border: 1px solid var(--border-primary) !important;
}

.toggle[data-state="checked"],
.switch[data-state="checked"],
[role="switch"][aria-checked="true"] {
  background: var(--accent-emerald) !important;
}

/* Tooltip Styling */
