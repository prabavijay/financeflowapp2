/* Override only container backgrounds, not text elements */
div[class*="bg-"]:not([class*="bg-gradient"]):not([class*="sidebar"]):not([class*="group"]):not([class*="text-"]):not([class*="font-"]):not(h1):not(h2):not(h3):not(h4):not(h5):not(h6):not(p):not(span) {
  background: linear-gradient(135deg, 
    rgba(30, 41, 59, 0.95) 0%, 
