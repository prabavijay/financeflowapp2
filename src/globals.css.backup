/* Modern Dark Theme Variables */
:root {
  --bg-primary: #0f172a;
  --bg-secondary: #1e293b;
  --bg-tertiary: #334155;
  --bg-accent: #475569;
  --text-primary: #f8fafc;
  --text-secondary: #e2e8f0;
  --text-muted: #94a3b8;
  --border-primary: rgba(148, 163, 184, 0.2);
  --border-secondary: rgba(148, 163, 184, 0.1);
  --shadow-dark: rgba(0, 0, 0, 0.25);
  --shadow-glow: rgba(16, 185, 129, 0.15);
  --accent-emerald: #10b981;
  --accent-emerald-dark: #059669;
}

/* Force Dark Theme on All Elements */
* {
  color-scheme: dark;
}

/* Global Dark Theme Application */
body, 
html, 
#__next,
[data-theme],
.page-container {
  background: linear-gradient(135deg, var(--bg-primary) 0%, #0c1420 50%, #0f172a 100%) !important;
  color: var(--text-primary) !important;
  min-height: 100vh;
}

/* Card Components - Modern Dark Theme with minimal shadows */
